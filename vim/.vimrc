set nocompatible
filetype on
filetype plugin on
filetype indent on

set autoread
set autowrite
set hlsearch
set gdefault
set incsearch
set autoindent
set smartindent
set smarttab
set tabstop=4
set shiftwidth=4
set expandtab
syntax on
set mouse=a
set ruler
set relativenumber
set nowrap
set wildmenu
set wildmode=list:longest
